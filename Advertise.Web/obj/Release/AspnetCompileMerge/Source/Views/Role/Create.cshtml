@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.Role.RoleCreateViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout._PanelLayout;
    ViewBag.Title = Admin.CreateRole;
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.CreateRole</h4>
        <button form="newRole" type="submit" class="button primary disabled-btn-link" disabled="disabled" >
            <i class="fa fa-save"></i>
            <span>@Admin.Save</span>
        </button>
        <a class="button primary" href="@Url.Action(MVC.Role.List())">
            <i class="fa fa-undo"></i>
            <span>@Admin.Return</span>
        </a>
    </div>
    <div class="form-box-item">
        <form id="newRole" action="@Url.Action(MVC.Role.Create())" method="Post">
            @Html.AntiForgeryToken()
            <div class="input-container half">
                <label for="name" class="rl-label">@Admin.Title</label>
                <input type="text" id="name" name="name" placeholder="@Admin.Title" class="tooltipster" title="@Admin.ItShowsRoleTitle" data-val="true" data-val-required="@Admin.RequiredTitle" data-val-length="@Admin.MessageLengthTitle" data-val-length-min="6" data-val-length-max="30" />
                <span class="field-validation-error" data-valmsg-for="name" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container">
                <label for="permissionTree" class="rl-label  tooltipster" title="@Admin.ItShowsRoleAccess">@Admin.Accesss</label>
                <div id="permissionTree"  style="direction:rtl" class="tree" data-action="treeRole" data-event="load"></div>
                <span class="field-validation-error" data-valmsg-for="permissions" data-valmsg-replace="true"></span>
                <input type="hidden" id="permissions" name="permissions" value=""/>
            </div>
            <div class="input-container"></div>
        </form>
    </div>
</div>