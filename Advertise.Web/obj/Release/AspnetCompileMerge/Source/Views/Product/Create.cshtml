@* Generator: MvcView GeneratePrettyNames: true *@
@using Advertise.Core.Extensions
@model Advertise.Core.Models.Product.ProductCreateViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout._ProfileLayout;
    ViewBag.Title = Admin.ProductRegister;
}
<div class="profile-content">
    <div class="headline buttons primary">
        <h4>@Admin.ProductRegister</h4>
        <button type="submit" form="newProduct" class="button primary disabled-btn-link" disabled="disabled" >
            <i class="fa fa-save"></i>
            <span>@Admin.Save</span>
        </button>
    </div>
    <div class="form-box-item">
        <form id="newProduct" action="@Url.Action(MVC.Product.Create())" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="input-container half">
                <label for="CategoryId" class="rl-label">
                    @Admin.Category2
                    <i class="fa fa-question-circle tooltipster" title="@Admin.ItShowsProductCategory"></i>

                </label>
                <div id="CategoryTree" style="direction:rtl" class="tree" data-action="treeCategoryProduct" data-event="load"></div>
                <input type="hidden" id="CategoryId" name="CategoryId" value= @Model.CategoryId data-val="true" data-val-required="@Admin.RequiredCategory" />
                <span class="field-validation-error " data-valmsg-for="CategoryId"  data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half">
                <label for="Title" class="rl-label">
                    @Admin.Title
                    <i class="fa fa-question-circle tooltipster" title="@Admin.Title"></i>

                </label>
                <input type="text" title="@Admin.ItShowsProductName" id="Title" name="Title" class="tooltipster" data-val="true" data-val-required="@Admin.RequiredTitle" />
                <span class="field-validation-error" data-valmsg-for="Title" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half">
                <label for="PreviousPrice" class="rl-label">
                    @Admin.PreviousPrice.PlusWord(" (").PlusWord(Admin.Toman).PlusWord(")")
                    <i class="fa fa-question-circle tooltipster" title="@Admin.ItShowsPreviousPrice"></i>

                </label>
                <input type="text" id="PreviousPrice" name="PreviousPrice" placeholder="@Admin.PreviousPrice" data-pattern="numeric"/>
                <span class="field-validation-error" data-valmsg-for="PreviousPrice" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half">
                <label for="Price" class="rl-label">
                    @Admin.Price.PlusWord(" (").PlusWord(Admin.Toman).PlusWord(")")
                    <i class="fa fa-question-circle tooltipster" title="@Admin.ItShowsPrice"></i>

                </label>
                <input type="text" id="Price" name="Price" placeholder="@Admin.Price" data-val="true" data-val-required="@Admin.RequiredPrice" data-pattern="numeric"/>
                <span class="field-validation-error" data-valmsg-for="Price" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half">
                <label for="sell" class="rl-label">@Admin.State
                    <i class="fa fa-question-circle tooltipster" title="@Admin.ItShowsProductState"></i>
                </label>
                <select id="sell" name="sell" data-val="true" data-val-required="@Admin.RequiredState">
                    <option>--- @Admin.Choose ---</option>
                    @foreach (var sellType in Model.SellTypeList)
                    {
                        <option value="@sellType.Value">@sellType.Text</option>
                    }
                </select>
                <span class="field-validation-error" data-valmsg-for="sell" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container">
                <label for="description" class="rl-label">
                    @Admin.Explanations
                    <i class="fa fa-question-circle tooltipster" title="@Admin.ItDescribesProduct"></i>


                </label>
                <textarea type="text" id="description" name="Description" rows="4"></textarea>
                <span class="field-validation-error" data-valmsg-for="description" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half">
                <label for="files" class="rl-label">
                    @Admin.Preview
                    <i class="fa fa-question-circle tooltipster" title="@Admin.ItShowsPreviewImage"></i>

                </label>
                @Html.Partial(MVC.Shared.Views._FineUploaderTemplate)
                <div name="files" id="files" data-action="uploaderProductImage" data-event="load"></div>
            </div>
            <div class="input-container half">
                <label for="files2" class="rl-label">
                    @Admin.Galery
                    <i class="fa fa-question-circle tooltipster" title="@Admin.ItShowsImagesGallery"></i>

                </label>
                @Html.Partial(MVC.Shared.Views._FineUploaderTemplate)
                <div name="files2" id="files2" data-action="uploaderProductImages" data-event="load"></div>
            </div>
            <div class="input-container half">
                <label class="rl-label">@Admin.Features
                    <i class="fa fa-question-circle tooltipster" title="@Admin.ItShowsProductFeatures"></i>
                </label>
                <div class="tree">
                    <button class="button primary" type="button" data-action="addFeatures" data-event="click">
                        <i class="fa fa-plus-square"></i>
                        <span>@Admin.AddNewFeature</span>
                    </button>
                    <div id="items">
                        <div id="item" data-index="0">
                            <div class="input-container">
                                <input type="hidden" name="Features.Index" value="0" />
                                <input type="text" id="Features[0].Title" name="Features[0].Title" style="width: 80%; float: right;" />
                                <button type="button" class="button primary" data-action="removeFeatures" data-event="click" data-param="0" style="width: 10%; float: right;">
                                    <i class="fa fa-trash"></i>
                                </button>
                                <span class="field-validation-error" data-valmsg-for="Features[0].Title" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="input-container half">
                <label class="rl-label">
                    @Admin.Tags
                    <i class="fa fa-question-circle tooltipster" title="@Admin.ItShowsProductTags"></i>

                </label>
                <div class="tree">
                    @for (var i = 0; i < Model.Tags.Count; i++)
                    {
                        <label class="rl-label">
                            <input type="hidden" name="ProductTags.Index" value="@i" />
                            <input type="checkbox" class="" name="ProductTags[@i].TagId" value="@Model.Tags[i].Id" />
                            @Model.Tags[i].Title
                        </label>
                    }
                </div>
            </div>
            <div class="input-container half">
                <label class="rl-label">
                    @Admin.Specification
                    <i class="fa fa-question-circle tooltipster" title="@Admin.ItShowsProductSpecifications"></i>

                </label>
                <div id="specificationContainer" class="tree">
                    <span>@Admin.RequiredCategory</span>
                </div>
            </div>
            <div class="input-container"></div>
        </form>
    </div>
</div>