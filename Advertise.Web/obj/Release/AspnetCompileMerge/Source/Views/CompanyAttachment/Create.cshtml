@model Advertise.Core.Models.CompanyAttachment.CompanyAttachmentCreateViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout._ProfileLayout;
    ViewBag.Title = "ایجاد فایل";
}
    <div class="dashboard-content">
        <div class="headline buttons primary">
            <h4>ایجاد فایل</h4>
            <button form="newCompanyAttachment" type="submit" class="button primary disabled-btn-link" disabled="disabled" >
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
            </button>
        </div>
        <div class="form-box-item">
            <form id="newCompanyAttachment" action="@Url.Action(MVC.CompanyAttachment.Create())" method="Post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="input-container half">
                    <label for="Title" class="rl-label" >@Admin.Title</label>
                    <input type="text" id="Title" name="Title" placeholder="@Admin.Title" class="tooltipster" title="@Admin.ItShowsImageName" data-val="true" data-val-required="@Admin.RequiredImageTitle" data-val-length="@Admin.MessageLengthTitle" data-val-length-max="30" data-val-length-min="6"/>
