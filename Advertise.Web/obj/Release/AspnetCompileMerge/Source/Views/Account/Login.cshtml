@* Generator: MvcView GeneratePrettyNames: true *@
@using Advertise.Core.Languages
@model Advertise.Core.Models.Account.LoginViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout._LandingLayout;
    ViewBag.Title = Admin.Login;
}
<div class="register-wrapper">
    <div class="form-box-item form-popup register-structure">
        <form action="@Url.Action(MVC.Account.Login())" method="Post" class="form-popup-content">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <h4 class="register-header popup-title">
                <i class="fa fa-sign-in"></i>
                <span>@Admin.Login</span>
            </h4>
            <hr class="line-separator register-hr">
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            <div class="input-container">
                <i class="fa fa-user register-icon"></i>
                <label for="UserName" class="rl-label register-label">@Admin.MobileOrEmailOrUsername</label>
                <input type="text" id="UserName" name="UserName" class="register-input" placeholder="@Admin.MobileOrEmailOrUsername" data-val="true" data-val-required="@Admin.RequiredUserFill" data-val-length="@Admin.MessageLengthUsername" data-val-length-min="6" data-val-length-max="50">
                <span class="field-validation-error" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container">
                <i class="fa fa-lock register-icon"></i>
                <label for="Password" class="rl-label register-label">@Admin.PassWord</label>
                <input type="password" id="Password" name="Password" class="register-input" placeholder="@Admin.PassWord" data-val="true" data-val-required="@Admin.RequiredPassword" data-val-length="@Admin.MessageLengthPassword" data-val-length-min="6" data-val-length-max="100">
                <span class="field-validation-error" data-valmsg-for="Password" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container">
                <input type="checkbox" id="RememberMe" name="RememberMe" class="hide-none-imp" value="true" checked>
                <label for="RememberMe" class="label-check register-label">
                    <span class="checkbox primary primary">
                        <span></span>
                    </span>
                    <a href="javascript:void(0)" class="primary register-check-text">@Admin.RememberMe</a>
                </label>
            </div>
            <div class="input-container">
                <p class="register-bottom-click">
                    @Admin.ForgetPassWord
                    <a href="@Url.Action(MVC.Account.ForgotPasswordConfirm())" class="primary register-link">@Admin.ClickHere</a>
                </p>
            </div>
            <div class="input-container">
                <button type="submit" class="button mid dark register-top-btn">
                    <span>@Admin.Login</span>
                </button>
            </div>
            <hr class="line-separator double register-hr">
            <div class="input-container">
                <a href="@Url.Action(MVC.Account.ExternalLogin("Google", "/"))" class="button mid twt google-color" target="_blank">@Admin.LoginGoogle</a>
            </div>
            <div class="input-container"></div>
        </form>
    </div>
</div>