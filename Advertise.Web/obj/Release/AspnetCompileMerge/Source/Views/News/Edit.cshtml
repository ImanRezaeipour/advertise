@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.News.NewsEditViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout._PanelLayout;
    ViewBag.Title = Admin.NewsEdit;
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.NewsEdit</h4>
        <button form="editNews" type="submit" class="button primary disabled-btn-link" disabled="disabled" >
            <i class="fa fa-save"></i>
            <span>@Admin.Save</span>
        </button>
        <a class="button primary" href="@Url.Action(MVC.News.List())">
            <i class="fa fa-undo"></i>
            <span>@Admin.Return</span>
        </a>
    </div>
    <div class="form-box-item">
        <form id="editNews" action="@Url.Action(MVC.News.Edit())" method="Post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />
            <div class="input-container half">
                <label for="Title" class="rl-label">@Admin.Title</label>
                <input type="text" id="Title" name="Title" value="@Model.Title" placeholder="@Admin.Title" class="tooltipster" title="@Admin.ItShowsNewsTitle" data-val="true" data-val-required="@Admin.RequiredTitle2" data-val-length="@Admin.MessageLengthTitle" data-val-length-min="6" data-val-length-max="30"/>
                <span class="field-validation-error" data-valmsg-for="Title" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half">
                <label for="IsActive" class="rl-label tooltipster" title="@Admin.ItActivesOrDeactivesNews">@Admin.Status</label>
                <input type="checkbox" id="IsActive" name="IsActive" value="true" checked="@Model.IsActive"/>
                <input type="hidden" name="IsActive" value="false"/>
            </div>
            <div class="input-container">
                <label for="Body" class="control-label tooltipster" title="@Admin.ItShowsNewsText">@Admin.FullExplanation</label>
                <span class="field-validation-error" data-valmsg-for="Body" data-valmsg-replace="true"></span>
                <textarea rows="10" cols="30" style="height: 440px" id="Body" name="Body" data-action="fillKendoEditorNews" data-event="load" data-val="true" data-val-required="@Admin.RequiredExplain">
                    @Html.Raw(HttpUtility.HtmlDecode(Model.Body))
                </textarea>
            </div>
            <div class="input-container"></div>
        </form>
    </div>
</div>