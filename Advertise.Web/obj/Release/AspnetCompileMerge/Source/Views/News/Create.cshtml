@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.News.NewsCreateViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout._PanelLayout;
    ViewBag.Title = Admin.CreateNews;
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.CreateNews</h4>
        <button form="newNews" type="submit" class="button primary disabled-btn-link" disabled="disabled" >
            <i class="fa fa-save"></i>
            <span>@Admin.Save</span>
        </button>
        <a class="button primary" href="@Url.Action(MVC.News.List())">
            <i class="fa fa-undo"></i>
            <span>@Admin.Return</span>
        </a>
    </div>
    <div class="form-box-item">
        <form id="newNews" action="@Url.Action(MVC.News.Create())" method="Post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="input-container half">
                <label for="Title" class="rl-label" >@Admin.Title</label>
                <input type="text" id="Title" name="Title" class="form-control tooltipster" placeholder="@Admin.Title"  title="@Admin.ItShowsNewsTitle"  data-val="true" data-val-required="@Admin.RequiredTitle2" data-val-length="@Admin.MessageLengthTitle" data-val-length-min="6" data-val-length-max="30"/>
                <span class="field-validation-error" data-valmsg-for="Title" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container">
                <label for="Body" class="control-label tooltipster" title="@Admin.ItShowsNewsText">@Admin.FullExplanation</label>
                <span class="field-validation-error" data-valmsg-for="Body" data-valmsg-replace="true"></span>
                <textarea rows="10" cols="30" style="height: 440px" id="Body" name="Body" data-action="fillKendoEditorNews" data-event="load" data-val="true" data-val-required="@Admin.RequiredExplain">
                </textarea>
            </div>
            <div class="input-container"></div>
        </form>
    </div>
</div>