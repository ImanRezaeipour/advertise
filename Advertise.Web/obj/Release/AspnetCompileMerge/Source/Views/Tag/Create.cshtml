@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.Tag.TagCreateViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout._PanelLayout;
    ViewBag.Title = Admin.CreateTag;
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.CreateTag</h4>

        <button form="newTag" type="submit" class="button primary disabled-btn-link" disabled="disabled"  onclick="javascript: form.action = '@Url.Action(MVC.Tag.Create())';">
            <i class="fa fa-save"></i>
            <span>@Admin.Save</span>
        </button>
        <a class="button primary" href="@Url.Action(MVC.Tag.List())">
            <i class="fa fa-undo"></i>
            <span>@Admin.Return</span>
        </a>
    </div>
    <div class="form-box-item">
        <form id="newTag" action="@Url.Action(MVC.Tag.Create())" method="Post">
            @Html.AntiForgeryToken()
            <div class="input-container half">
                <label for="Title" class="rl-label">@Admin.Title</label>
                <input type="text" id="Title" name="Title" placeholder="@Admin.Title" data-val="true" data-val-required="@Admin.RequiredTitle2"/>
                <span class="field-validation-error" data-valmsg-for="Title" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half">
                <label for="Color" class="rl-label">@Admin.Color</label>
                <select id="Color" name="Color">
                    @foreach (var color in Model.ColorTypeList)
                    {
                        <option value="@color.Value">@color.Text</option>
                    }
                </select>
            </div>
            <div class="input-container half">
                <label for="Description" class="rl-label">@Admin.Description</label>
                <input type="text" id="Description" name="Description" placeholder="@Admin.Description" />
            </div>
            <div class="input-container half">
                <label for="CostValue" class="rl-label">@Admin.Price</label>
                <input type="text" id="CostValue" name="CostValue" placeholder="@Admin.Price" data-pattern="numeric"/>
            </div>
            <div class="input-container half">
                <label for="DurationDay" class="rl-label">@Admin.DurationOfUse</label>
                <input type="text" id="DurationDay" name="DurationDay" placeholder="@Admin.DurationOfUse" />
            </div>
            <div class="input-container half">
                @Html.Partial(MVC.Shared.Views._FineUploaderTemplate)
                <div name="file" id="file" data-action="uploaderTag" data-event="load"></div>
            </div>
            <div class="input-container"></div>
        </form>
    </div>
</div>