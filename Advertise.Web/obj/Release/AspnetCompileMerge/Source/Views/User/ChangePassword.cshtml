@{
    Layout = MVC.Shared.Views.SiteLayout._ProfileLayout;
    ViewBag.Title = Admin.ChangePassWord;
}
@model Advertise.Core.Models.User.UserChangePasswordViewModel
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.ChangePassWord</h4>
        <button form="editUser" type="submit" class="button primary disabled-btn-link" disabled="disabled" >
            <i class="fa fa-save"></i>
            <span>@Admin.Save</span>
        </button>
    </div>
    <div class="form-box-item">
        <form id="editUser" action="@Url.Action(MVC.User.ChangePassword())" method="Post">
            @Html.AntiForgeryToken()
            <div class="input-container">
                <label for="OldPassword" class="control-label">@Admin.PreviousPassword</label>
                <input type="password" id="OldPassword" name="OldPassword" value="" class="form-control tooltipster" title="@Admin.ItShowsPasswordPrevious" placeholder="@Admin.PreviousPassword" data-val="true" data-val-required="@Admin.RequiredPreviousPassword" />
                <span class="field-validation-error" data-valmsg-for="OldPassword" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half">
                <label for="NewPassword" class="control-label">@Admin.NewPassword</label>
                <input type="password" id="NewPassword" name="NewPassword" value="" class="form-control tooltipster" title="@Admin.ItShowsPasswordNew" placeholder="@Admin.NewPassword" data-val="true" data-val-required="@Admin.RequiredNewPassword" data-val-equalto-other="NewPassword" />
                <span class="field-validation-error" data-valmsg-for="NewPassword" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half">
                <label for="ConfirmPassword" class="control-label">@Admin.NewPasswordRepeat</label>
                <input type="password" id="ConfirmPassword" name="ConfirmPassword" value="" class="form-control tooltipster" title="@Admin.ItShowsPasswordRepeat" placeholder="@Admin.NewPasswordRepeat" data-val="true" data-val-required="@Admin.RequiredRepeatPassword" data-val-equalto="@Admin.EqualNewPassword" data-val-equalto-other="NewPassword" />
                <span class="field-validation-error" data-valmsg-for="ConfirmPassword" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container"></div>
        </form>
    </div>
</div>