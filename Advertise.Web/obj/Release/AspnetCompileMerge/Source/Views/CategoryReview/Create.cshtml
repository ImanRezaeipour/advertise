@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.CategoryReview.CategoryReviewCreateViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout._PanelLayout;
    ViewBag.Title = Admin.CreateCategoryReview;
}
    <div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.CreateCategoryReview</h4>
        <button form="newCategoryReview" type="submit" class="button primary disabled-btn-link" disabled="disabled" >
            <i class="fa fa-save"></i>
            <span>@Admin.Save</span>
        </button>
        <a class="button primary" href="@Url.Action(MVC.CategoryReview.List())">
            <i class="fa fa-undo"></i>
            <span>@Admin.Return</span>
        </a>
    </div>
    <div class="form-box-item">
        <form id="newCategoryReview" action="@Url.Action(MVC.CategoryReview.Create())" method="Post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="input-container half">
                <label for="CategoryId" class="rl-label tooltipster" title="@Admin.BeReviewedCategory">@Admin.Category</label>
                <div id="CategoryTree" style="direction:rtl" class="tree" data-action="treeCategoryReview" data-event="load"></div>
                <input type="hidden" name="CategoryId" id="CategoryId" data-val="true" data-val-required="@Admin.RequiredCategory" />
                <span class="field-validation-error" data-valmsg-for="CategoryId" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half">
                <label for="Title" class="rl-label">@Admin.Title</label>
                <input type="text" id="Title" name="Title" class="form-control tooltipster" placeholder="@Admin.Title" title="@Admin.ItShowsReviewTitle" data-val="true" data-val-required="@Admin.RequiredTitle" data-val-length="@Admin.MessageLengthTitle" data-val-length-min="2" data-val-length-max="30" />
                <span class="field-validation-error" data-valmsg-for="Title" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container">
                <label for="Body" class="rl-label tooltipster" title="@Admin.ItDescribesReview">@Admin.FullExplanation</label>
                <span class="field-validation-error" data-valmsg-for="Body" data-valmsg-replace="true"></span>
                <textarea id="Body" name="Body" data-action="fillEditorCompanyReview" data-event="load" data-val="true" data-val-required="@Admin.RequiredReview"></textarea>
            </div>
            <div class="input-container"></div>
        </form>
    </div>
</div>