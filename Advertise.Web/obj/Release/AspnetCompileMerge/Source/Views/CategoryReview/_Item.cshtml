@* Generator: MvcView GeneratePrettyNames: true *@
@using Advertise.Core.Extensions
@using Advertise.Service.Services.File
@using Auth = Advertise.Service.Services.Permissions.AccessPermission.AccessPermissionConst;
@model Advertise.Core.Models.CategoryReview.CategoryReviewViewModel
@{
    Layout = null;
}
<div class="landing-items review-items">
    <div class="product-item column landing-column">
        <div class="part-nine">
            @if (User.IsInRole(Auth.CanEditCategoryReview) || User.IsInRole(Auth.CanDeleteCategoryReview))
            {
                <div class="item-edit-wrapper">
                    <i class="fa fa-pencil-square"></i>
                    <ul class="item-edit-list">
                        @if (User.IsInRole(Auth.CanEditCategoryReview))
                        {
                            <li>
                                <a href="@Url.Action(MVC.CategoryReview.Edit(Model.Id))">
                                    <span>@Admin.Edit</span>
                                    <i class="fa fa-pencil fa-flip-horizontal"></i>
                                </a>
                            </li>
                        }
                        @if (User.IsInRole(Auth.CanDeleteCategoryReview))
                        {
                            <li>
                                <a href="#">
                                    <span>@Admin.Delete</span>
                                    <i class="fa fa-trash"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
        <div class="product-preview-actions">
            <figure class="product-preview-image">
                <a href="javascript:void(0)" data-action="openShadow" data-event="click" data-type="modal">
                    <div class="item-preview-image">
                        <img src="@FileConst.ReviewCategory" alt="@Admin.Category2.PlusWord(" ").PlusWord(Admin.Review)">
                    </div>
                </a>
            </figure>
        </div>
        <a class="novinak-title-link" href="javascript:void(0)" data-action="openShadow" data-event="click" data-type="modal">
            <p class="novinak-title text-header">@Model.Title</p>
        </a>
        <a>
            <p class="part-one empty-one"></p>
        </a>
        <p class="part-two"><i class="fa fa-calendar-check-o"></i> <span>@Admin.InsertDate.PlusWord(":")</span></p>
        <p class="part-three">@Model.CreatedOn</p>
        <hr class="line-separator item-footer">
        <div class="part-four">
            <figure class="user-avatar small">
                @if (Model.CategoryImageFileName != null)
                {
                    <a href="@Url.Action(MVC.Category.Detail(Model.CategoryAlias))">
                        <div class="novinak-owner-image">
                            <img src="@FileConst.ImagesWebPath.PlusWord(Model.CategoryImageFileName)" alt="@Model.CategoryTitle.PlusWord(" ").PlusWord(Admin.Category2)">
                        </div>
                    </a>
                }
                else
                {
                    <div class="novinak-owner-image">
                        <img src="@FileConst.NoPreview" alt="@Admin.Category2">
                    </div>
                }
            </figure>
            <a href="@Url.Action(MVC.Category.Detail(Model.CategoryAlias))">
                <p class="part-five text-header tiny">@Model.CategoryTitle</p>
            </a>
        </div>
        <div class="bg-shadow"></div>
        <div class="slider-shadow">
            <div class="slide-file-preview">
                <div class="inner-preview">
                    <h3 class="modal-item-title">@Model.Title</h3>
                    <h5 class="modal-item-content">@Model.Body</h5>
                    <div class="slide-files-actions">
                        <div class="slide-action-wrapper slide-file-close" data-action="closeShadow" data-event="click">
                            <i class="fa fa-times"></i>
                            <i class="fa fa-times"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearboth"></div>
</div>