@{
    Layout = MVC.Shared.Views.SiteLayout._LandingLayout;
    ViewBag.Title = Admin.Companies;
}
@using Advertise.Core.Extensions
@using Advertise.Service.Services.File
@model Advertise.Core.Models.Company.CompanyListViewModel
<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-briefcase"></i>
        <span>@Admin.Companies</span>
    </div>
    <div class="panel-body">
        <div class="row" id="CompanyItems">
            @Html.Partial(MVC.Company.Views._ListMore, Model)
        </div>
    </div>
    <div class="panel-footer padding-5-5">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <button class="btn btn-info btn-block btn-sm" type="button" data-page="2" data-json='{}' data-action="justPagingCompanyItem" data-event="click">
                     <i class="fa fa-chevron-circle-down"></i>
                    <span>@Admin.More</span>
                </button>
            </div>
        </div>
        <div id="progress" align="center" style="display: none">
            <img src="@FileConst.NoPreview.RemoveTilde()" alt="@Admin.Loading" />
        </div>
    </div>
</div>