@* Generator: MvcView GeneratePrettyNames: true *@
@using Advertise.Core.Extensions
@using Advertise.Service.Services.File
@model Advertise.Core.Models.Bag.BagViewModel
@{
    Layout = null;
}
<div class="purchase-item removable-bag-item">
    <div class="purchase-item-date">
        <p>@Model.CreatedOn</p>
    </div>
    <div class="purchase-item-details">
        <div class="item-preview">
            <figure class="product-preview-image small liquid">
                <img src="@FileConst.ImagesWebPath.PlusWord(Model.ProductImageFileName)" alt="product image">
            </figure>
            <a href="@Url.Action(MVC.Product.Detail(Model.ProductCode,Model.ProductTitle))">
                <p class="text-header">@Model.ProductTitle</p>
            </a>
            <p class="description">@Model.ProductDescription</p>
        </div>
    </div>
    <div class="purchase-item-info">
        <a href="@Url.Action(MVC.Product.Search().AddRouteValues(new {c = Model.CategoryId}))">
            <p class="category primary">@Model.CategoryTitle</p>
        </a>
        <a href="@Url.Action(MVC.Company.Detail(Model.CompanyTitle ,Model.CompanyTitle))">
            <p><span class="light">@Admin.Company.PlusWord(": ")</span>@Model.CompanyTitle</p>
        </a>
        <p><span class="light">@Admin.ProductCode.PlusWord(": ")</span>@Model.ProductCode</p>
        <p><span class="light">@Admin.CompanyCode.PlusWord(": ")</span>@Model.CompanyAlias</p>
    </div>
    <div class="purchase-item-download">
        <p class="price">@Model.ProductPrice</p>
        <p class="price-toman"> @Admin.Toman</p>
    </div>
    <div class="purchase-item-price">
        <select id="count" name="count" value="@Model.ProductCount" data-action="bagChangeProductCount" data-event="change" data-param="@Model.ProductId" data-param-2="@Model.ProductPrice">
            <option value="1" @if (Model.ProductCount == 1) { <text> selected</text>}>1</option>
            <option value="2" @if (Model.ProductCount == 2) { <text> selected</text>}>2</option>
            <option value="3" @if (Model.ProductCount == 3) { <text> selected</text>}>3</option>
            <option value="4" @if (Model.ProductCount == 4) { <text> selected</text>}>4</option>
            <option value="5" @if (Model.ProductCount == 5) { <text> selected</text>}>5</option>
            <option value="6" @if (Model.ProductCount == 6) { <text> selected</text>}>6</option>
            <option value="7" @if (Model.ProductCount == 7) { <text> selected</text>}>7</option>
            <option value="8" @if (Model.ProductCount == 8) { <text> selected</text>}>8</option>
            <option value="9" @if (Model.ProductCount == 9) { <text> selected</text>}>9</option>
            <option value="10" @if (Model.ProductCount == 10) {<text>selected</text>}>10</option>
        </select>
    </div>
    <div class="purchase-item-recommend">
        <p class="price total-product-price" data-val="@Model.TotalProductPrice">@Model.TotalProductPrice</p>
        <p class="price-toman"> @Admin.Toman</p>
    </div>
    <div class="purchase-item-delete" data-action="bagProfilePageDelete" data-event="click" data-param="@Model.ProductId">
        <i class="delete fa fa-times-circle"></i>
    </div>
</div>