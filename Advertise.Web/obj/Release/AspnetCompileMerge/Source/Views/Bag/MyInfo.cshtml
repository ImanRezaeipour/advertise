@* Generator: MvcView GeneratePrettyNames: true *@
@using Advertise.Core.Extensions
@model Advertise.Core.Models.Bag.BagMyInfoViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout._PanelLayout;
    ViewBag.Title = Admin.ProfileEdit;
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>@Admin.ProfileEdit</h4>
        <button type="submit" form="editInfo" class="button primary">
            <i class="fa fa-save"></i>
            <span>@Admin.Save</span>
        </button>
        <a class="button primary" href="@Url.Action(MVC.Bag.MyItemlist())">
            <i class="fa fa-undo"></i>
            <span>@Admin.Return</span>
        </a>
    </div>
    <div class="form-box-item">
        <form id="editInfo" action="@Url.Action(MVC.Bag.UpdateMyInfo())" method="post">
            <input type="hidden" id="CreatedById" name="CreatedById" value="@Model.CreatedById" />
            @Html.AntiForgeryToken()
            <div class="input-container half">
                <input type="hidden" id="Address_Longitude" name="Address.Longitude" value="@Model.Address.Longitude.ZeroIfNull()" />
                <input type="hidden" id="Address_Latitude" name="Address.Latitude" value="@Model.Address.Latitude.ZeroIfNull()" />
                <div id="setMap"></div>
            </div>
            <div class="input-container half fixed-height">
                <label for="province" class="rl-label">@Admin.Province</label>
                <input type="hidden" name="ProvinceId" id="ProvinceId" value="" />
                <select id="province" name="province" data-val="true" data-val-required="@Admin.RequiredProvince" data-action="selectProvince" data-event="change">
                    <option value="" selected disabled>-- @Admin.Choose --</option>
                    @foreach (var province in Model.AddressProvince)
                    {
                        <option value="@province.Value">@province.Text</option>
                    }
                </select> 
                <span class="field-validation-error" data-valmsg-for="province" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half fixed-height">
                <label for="city" class="rl-label">@Admin.City</label>
                <input type="hidden" name="CityId" id="CityId" value="" />
                <select id="city" name="city" data-val="true" data-val-required="@Admin.RequiredCity" data-action="selectCity" data-event="change" >
                    <option value="">-- @Admin.Choose --</option>
                </select>
                <span class="field-validation-error" data-valmsg-for="city" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half address-area">
                <label for="address" class="rl-label">@Admin.Address</label>
                <textarea rows="2" id="address" name="address" class="info-address-textarea" placeholder="@Admin.Address" value="@Model.UserAddress" data-val="true" data-val-required="@Admin.RequiredAddress"></textarea>
                <span class="field-validation-error" data-valmsg-for="address" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half fixed-height">
                <label for="postalCode" class="rl-label">@Admin.PostalCode</label>
                <input type="number" id="postalCode" name="postalCode" placeholder="@Admin.ExamplePostalCode" value="@Model.PostalCode" data-val="true" data-val-required="@Admin.RequiredPostalCode" data-val-length="@Admin.MessageLengthPostalCode" data-val-length-min="10" data-val-length-max="10" data-pattern="numeric" />
                <span class="field-validation-error" data-valmsg-for="postalCode" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half fixed-height">
                <label for="firstName" class="rl-label">@Admin.FirstName</label>
                <input type="text" id="firstName" name="firstName" placeholder="@Admin.FirstName" value="@Model.UserFirstName" data-val="true" data-val-required="@Admin.RequiredFirstName" />
                <span class="field-validation-error" data-valmsg-for="firstName" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half fixed-height">
                <label for="lastName" class="rl-label">@Admin.LastName</label>
                <input type="text" id="lastName" name="lastName" placeholder="@Admin.LastName" value="@Model.UserLastName" data-val="true" data-val-required="@Admin.RequiredLastName" />
                <span class="field-validation-error" data-valmsg-for="lastName" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half fixed-height">
                <label for="nationalCode" class="rl-label">@Admin.NationalCode</label>
                <input type="number" id="nationalCode" name="nationalCode" placeholder="@Admin.ExampleNationalCode" value="@Model.UserNationalCode" data-val="true" data-val-required="@Admin.RequiredNationalCode" data-val-length="@Admin.MessageLengthNationalCode" data-val-length-min="10" data-val-length-max="10" />
                <span class="field-validation-error" data-valmsg-for="nationalCode" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half fixed-height">
                <label for="phoneNumber" class="rl-label">@Admin.Phone</label>
                <input type="number" id="phoneNumber" name="phoneNumber" placeholder="@Admin.ExamplePhoneNumber" value="@Model.PhoneNumber" data-val="true" data-val-required="@Admin.RequiredPhoneNumber" data-val-length="@Admin.MessageLengthPhoneNumber" data-val-length-min="11" data-val-length-max="11" />
                <span class="field-validation-error" data-valmsg-for="phoneNumber" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half fixed-height">
                <label for="mobileNumber" class="rl-label">@Admin.Mobile</label>
                <input type="number" id="mobileNumber" name="mobileNumber" placeholder="@Admin.ExampleMobileNumber" value="@Model.MobileNumber" data-val="true" data-val-required="@Admin.RequiredMobileNumber" data-val-length="@Admin.MessageLengthMobileNumber" data-val-length-min="11" data-val-length-max="11" />
                <span class="field-validation-error" data-valmsg-for="mobileNumber" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half fixed-height">
                <label for="transfereeNameName" class="rl-label">@Admin.TransfereeName.PlusWord(" (").PlusWord(Admin.Optional).PlusWord(")")</label>
                <input type="text" id="transfereeName" name="transfereeName" placeholder="@Admin.TransfereeName" value="@Model.TransfereeName" />
                <span class="field-validation-error" data-valmsg-for="transfereeName" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container payment-wrapper">
                <label class="rl-label">@Admin.PaymentType</label>
                <ul class="payment-holder">
                    <li class="payment-label-list">
                        <label for="paymentType1" class="payment-label"><input type="radio" id="paymentType1" name="Payment" value="1" checked> @Admin.OnlinePayment</label>
                    </li>
                    <li class="payment-label-list">
                        <label for="paymentType2" class="payment-label"><input type="radio" id="paymentType2" name="Payment" value="2"> @Admin.PayInPerson</label>
                    </li>
                    <li class="payment-label-list">
                        <label for="paymentType3" class="payment-label"><input type="radio" id="paymentType3" name="Payment" value="3"> @Admin.PaymentViaATM</label>
                    </li>
                </ul>
            </div>
            <div class="clearboth"></div>
        </form>
    </div>
</div>
@section scripts {
    <script async defer src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDsVAy5ATsGkBA11NPQWSakpy0BiNuBPTc&callback=mapSet'></script>
}