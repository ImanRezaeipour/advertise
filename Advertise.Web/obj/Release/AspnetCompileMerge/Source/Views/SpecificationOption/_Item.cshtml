@* Generator: MvcView GeneratePrettyNames: true *@
@using Advertise.Core.Extensions
@using Advertise.Service.Services.File
@using Auth = Advertise.Service.Services.Permissions.AccessPermission.AccessPermissionConst;
@model Advertise.Core.Models.SpecificationOption.SpecificationOptionViewModel
@{
    Layout = null;
}
<div class="landing-items specification-option-items">
    <div class="product-item column landing-column">
        <div class="part-nine">
            @if (User.IsInRole(Auth.CanEditSpecificationOption) || User.IsInRole(Auth.CanDeleteSpecificationOption))
            {
                <div class="item-edit-wrapper">
                    <i class="fa fa-pencil-square"></i>
                    <ul class="item-edit-list">
                        @if (User.IsInRole(Auth.CanEditSpecificationOption))
                        {
                            <li>
                                <a href="@Url.Action(MVC.SpecificationOption.Edit(Model.Id))">
                                    <span>@Admin.Edit</span>
                                    <i class="fa fa-pencil fa-flip-horizontal"></i>
                                </a>
                            </li>
                        }
                        @if (User.IsInRole(Auth.CanDeleteSpecificationOption))
                        {
                            <li>
                                <a href="#" data-action="removeItem" data-event="click" data-param="SpecificationOption" data-param-id="">
                                    <span>@Admin.Delete</span>
                                    <i class="fa fa-trash"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
        <div class="product-preview-actions">
            <figure class="product-preview-image">
                <div class="item-preview-image">
                    <img src="@FileConst.SpecificationOption" alt="@Admin.SpecificationOption.PlusWord(" ").PlusWord(Model.Title)">
                </div>
            </figure>
        </div>
        <a class="novinak-title-link" href="javascript:void(0)">
            <p class="novinak-title text-header">@Model.Title</p>
        </a>
        <a href="javascript:void(0)">
            <p class="part-one"><span>@Model.SpecificationTitle</span></p>
        </a>
        <p class="part-two"><i class="fa fa-calendar-check-o"></i> <span>@Admin.InsertDate.PlusWord(":")</span></p>
        <p class="part-three">@Model.CreatedOn</p>
        <hr class="line-separator item-footer">
        <div class="part-four">
            <figure class="user-avatar small">
                @if (Model.CategoryImageFileName != null)
                {
                    <a href="@Url.Action(MVC.Category.Detail(Model.CategoryAlias)).AddSlug(Model.CategoryMetaTitle)">
                        <div class="novinak-owner-image">
                            <img src="@FileConst.ImagesWebPath.PlusWord(Model.CategoryImageFileName)" alt="@Model.CategoryTitle">
                        </div>
                    </a>
                }
                else
                {
                    <div class="novinak-owner-image">
                        <img src="@FileConst.NoPreview" alt="category without image">
                    </div>
                }
            </figure>
            <a href="@Url.Action(MVC.Category.Detail(Model.CategoryAlias)).AddSlug(Model.CategoryMetaTitle)" class="tooltipster" title="@Model.CategoryTitle">
                <p class="part-five text-header tiny">@Model.CategoryTitle</p>
            </a>
        </div>
        <div class="clearboth"></div>
    </div>
</div>