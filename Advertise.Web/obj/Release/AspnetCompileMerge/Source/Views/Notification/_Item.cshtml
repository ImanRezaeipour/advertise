@* Generator: MvcView GeneratePrettyNames: true *@
@using Advertise.Core.Extensions
@using Advertise.Core.Types
@using Advertise.Service.Services.File
@model Advertise.Core.Models.Notification.NotificationViewModel
@{
    Layout = null;
}
<div class="notif-item-wrapper">
    <a href="@if(Model.Type == NotificationType.NewProduct) {<text>@Url.Action(MVC.Product.Detail(Model.TargetId.ToString()))</text>}">
        <figure class="notif-item-img">
            @if (Model.TargetImage != null)
            {
                <img src="@FileConst.ImagesWebPath.PlusWord(Model.TargetImage)" alt="notification image">
            }
            else
            {
                <img src="@FileConst.LogoAvatar" alt="notification image">
            }
        </figure>
    </a>
    <ul class="notif-item-texts">
        <li>
            <a href="@if (Model.Type == NotificationType.NewProduct) {<text>@Url.Action(MVC.Product.Detail(Model.TargetId.ToString()))</text>}">
                <p class="notif-item-title">@Model.TargetTitle</p>
            </a>
        </li>
        <li>
            <p class="notif-item-message">@Model.Message</p>
        </li>
        <li>
            <p class="notif-item-date">@Model.CreatedOn</p>
        </li>
    </ul>
    <div class="notif-item-btn-wrapper">
        <div class="notif-item-btn">
            <a href="javascript:void(0)">
                <i class="fa fa-times fa-2x notif-item-times"></i>
            </a>
        </div>
    </div>
</div>