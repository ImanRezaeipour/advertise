@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.CompanyVideo.CompanyVideoCreateViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout._ProfileLayout;
    ViewBag.Title = "ایجاد ویدئو";
}
<div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>ذخیره ویدئو</h4>
        <button form="newCompanyVideo" type="submit" class="button primary disabled-btn-link" disabled="disabled">
            <i class="fa fa-save"></i>
            <span>@Admin.Save</span>
        </button>
    </div>
    <div class="form-box-item">
        <form id="newCompanyVideo" action="@Url.Action(MVC.CompanyVideo.Create())" method="Post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="input-container half">
                <label for="Title" class="rl-label">@Admin.Title</label>
                @*                ToDo*@
                <input type="text" id="Title" name="Title" placeholder="@Admin.Title" class="tooltipster" title="نام گالری ویدئو را نمایش می‌دهد" data-val="true" data-val-required="لطفا یک نام برای گالری ویدئو وارد نمایید " data-val-length="@Admin.MessageLengthTitle" data-val-length-max="30" data-val-length-min="6" />
                <span class="field-validation-error" data-valmsg-for="Title" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container half">
                <label for="Order" class="rl-label">اولویت</label>
                <input type="text" id="Order" name="Order" placeholder="الویت" class="tooltipster" title="نام گالری ویدئو را نمایش می‌دهد" />
                <span class="field-validation-error" data-valmsg-for="Order" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container">
                <label for="files" class="rl-label tooltipster" title="بارگذاری ویدئو">بارگذاری ویدئو</label>
                @Html.Partial(MVC.Shared.Views._FineUploaderTemplate)
                <div name="files" id="files" data-action="uploaderCompanyVideo" data-event="load" data-param="edit"></div>
            </div>
            <div class="input-container"></div>


        </form>
    </div>
</div>
