@* Generator: MvcView GeneratePrettyNames: true *@
@model Advertise.Core.Models.ProductReview.ProductReviewCreateViewModel
@{
    Layout = MVC.Shared.Views.SiteLayout._PanelLayout;
    ViewBag.Title = Admin.CreateReview;
}
    <div class="dashboard-content">
    <div class="headline buttons primary">
        <h4>Admin.CreateReview</h4>
        <button form="newProductReview" type="submit" class="button primary disabled-btn-link" disabled="disabled" >
            <i class="fa fa-save"></i>
            <span>@Admin.Save</span>
        </button>
        <a class="button primary" href="@Url.Action(MVC.ProductReview.List())">
            <i class="fa fa-undo"></i>
            <span>@Admin.Return</span>
        </a>
    </div>
    <div class="form-box-item">
        <form id="newProductReview" action="@Url.Action(MVC.ProductReview.Create())" method="Post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="input-container half">
                <label for="ProductId" class="rl-label">@Admin.BrandName</label>
                <select name="ProductId" id="ProductId">
                    <option disabled="disabled">@Admin.Title</option>
                    @foreach (var productlist in Model.ProductList)
                    {
                        <option value="@productlist.Value">@productlist.Text</option>
                    }
                </select>
            </div>
            <div class="input-container">
                <label for="Body" class="rl-label tooltipster" title="@Admin.ItShowsReviewText">@Admin.FullExplanation</label>
                <textarea id="Body" name="Body" data-action="fillEditorCompanyReview" data-event="load" data-val="true" data-val-required="@Admin.RequiredReview"></textarea>
                <span class="field-validation-error" data-valmsg-for="Body" data-valmsg-replace="true"></span>
            </div>
            <div class="input-container"></div>
        </form>
    </div>
</div>