                    <label for="FacebookLink" class="rl-label">@Admin.Facebook</label>
                    <input type="text" id="FacebookLink" name="FacebookLink" placeholder="@Admin.Facebook" class="tooltipster" title="@Admin.FacebookAccount"/>
                </div>
                <div class="input-container half">
                    <label for="GooglePlusLink" class="rl-label">@Admin.GooglePlus</label>
                    <input type="text" id="GooglePlusLink" name="GooglePlusLink" placeholder="@Admin.GooglePlus" class="tooltipster" title="@Admin.GooglePlusAccount"/>
                </div>
                <div class="input-container half">
                    <label for="TwitterLink" class="rl-label">@Admin.Twitter</label>
                    <input type="text" id="TwitterLink" name="TwitterLink" placeholder="@Admin.Twitter" class="tooltipster" title="@Admin.TwitterAccount"/>
                </div>
                <div class="input-container half">
                    <label for="YoutubeLink" class="rl-label">@Admin.YouTube</label>
                    <input type="text" id="YoutubeLink" name="YoutubeLink" placeholder="@Admin.YouTube" class="tooltipster" title="@Admin.YouTubeAccount"/>
                </div>
                <div class="input-container"></div>
            </form>
        </div>
    </div>