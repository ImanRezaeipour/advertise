    Layout = MVC.Shared.Views.SiteLayout._ProfileLayout;
    ViewBag.Title = Admin.CreateSocialNetworks;
}
    <div class="profile-content">
        <div class="headline buttons primary">
            <h4>@Admin.CreateSocialNetworks</h4>
            <button form="newCompanySocial" type="submit" class="button primary disabled-btn-link" disabled="disabled"  onclick="javascript: form.action = '@Url.Action(MVC.CompanySocial.Create())';">
                <i class="fa fa-save"></i>
                <span>@Admin.Save</span>
